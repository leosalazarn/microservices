		{
			"name": "Products Service - Command (CQRS Write)",
			"item": [
				{
					"name": "Create Product",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"var jsonData = pm.response.json();",
									"if (jsonData.id) {",
									"    pm.collectionVariables.set('product_id', jsonData.id);",
									"    console.log('Saved product_id: ' + jsonData.id);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"name\": \"New Product\",\n  \"price\": 99.99,\n  \"description\": \"Product description\",\n  \"category\": \"Electronics\"\n}"
						},
						"url": {
							"raw": "{{gateway_url}}/products/products",
							"host": ["{{gateway_url}}"],
							"path": ["products", "products"]
						},
						"description": "Create product via Command Bus → Aggregate → Event Store → Kafka. Returns MongoDB ObjectId as 'id'."
					}
				},
				{
					"name": "Update Product (Full)",
					"request": {
